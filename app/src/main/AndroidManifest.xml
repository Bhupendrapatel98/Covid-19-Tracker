<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covid_19tracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="covid.tracker.covid_19tracker.ui.DisttDetailActivity"></activity>
        <activity android:name="covid.tracker.covid_19tracker.ui.SplashActivity"
            android:theme="@style/Style">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="covid.tracker.covid_19tracker.ui.DisttListActivity" />
        <activity android:name="covid.tracker.covid_19tracker.ui.StateDataActivity" />
        <activity android:name="covid.tracker.covid_19tracker.ui.StateListActivity" />
        <activity android:name="covid.tracker.covid_19tracker.ui.CountryDetailActivity" />
        <activity android:name="covid.tracker.covid_19tracker.ui.AffectedCountriesActivity" />
        <activity android:name="covid.tracker.covid_19tracker.ui.MainActivity">

        </activity>

    </application>

</manifest>